
	coin = 1+rand()%10;
		if( coin <= 8)
		{
			return 1;
		}
		else
		{
			return 2;
		}

}

void zero()
{
	sum1 = 0;
	sum2 = 0;
	 
}

int main(int argc, char *argv[]) {
	int i,dice;
	FILE *fp;
	
	fp = fopen("ergastirio.txt","w");
	
	for(i=0;i<10;i++)
	{
		dice = random();
		su(dice);
	}
	fprintf(fp,"1 = %d\n2 = %d\n",sum1,sum2);
	zero();
	fprintf(fp,"\n\n");
	
	
	
	for(i=0;i<100;i++)
	{
		dice = random();
		su(dice);
	}
	fprintf(fp,"1 = %d\n2 = %d\n",sum1,sum2);
	zero();
	fprintf(fp,"\n\n");
	
	
	
		for(i=0;i<1000;i++)
	{
		dice = random();
		su(dice);
	}
	fprintf(fp,"1 = %d\n2 = %d\n",sum1,sum2);
	zero();
	fprintf(fp,"\n\n");
	
		for(i=0;i<10000;i++)
	{
		dice = random();
		su(dice);
	}
	fprintf(fp,"1 = %d\n2 = %d",sum1,sum2);
	zero();
	fprintf(fp,"\n\n");
	
	return 0;
}
